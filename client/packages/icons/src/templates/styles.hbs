@font-face {
  font-family: "{{ name }}";
  src: {{{ fontSrc }}};
}

{{# if selector }}
{{ selector }}:before {
{{ else }}
{{ tag }}[class^="{{prefix}}-"]:before, {{ tag }}[class*=" {{prefix}}-"]:before {
{{/ if }}
  font-family: {{ name }} !important;
  font-style: normal;
  font-weight: normal !important;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}

.{{prefix}} {
  display: inline-block;
  font: normal normal normal 1em/1 {{ name }};
  speak: none;
  text-transform: none;
  /* Better Font Rendering */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* relative units */
.{{prefix}}.{{prefix}}-sm {
  font-size: 0.8em;
}

.{{prefix}}.{{prefix}}-lg {
  font-size: 1.4em;
}

.{{prefix}}.{{prefix}}-xl {
  font-size: 1.6em;
}

/* absolute units */
.{{prefix}}.{{prefix}}-16 {
  font-size: 16px;
}

.{{prefix}}.{{prefix}}-32 {
  font-size: 32px;
}

.{{prefix}}.{{prefix}}-ul {
  padding-left: 0;
  list-style-type: none;
}
.{{prefix}}.{{prefix}}-ul > li {
  display: flex;
  align-items: flex-start;
  line-height: 1.4;
}
.{{prefix}}.{{prefix}}-ul > li > .{{prefix}} {
  margin-right: 0.4em;
  line-height: inherit;
}

.{{prefix}}.{{prefix}}-spin {
  animation: icon-spin 2s infinite linear reverse;
}

@keyframes icon-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.{{prefix}}.{{prefix}}-rotate-45 {
  transform: rotate(45deg);
}

.{{prefix}}.{{prefix}}-rotate-90 {
  transform: rotate(90deg);
}

.{{prefix}}.{{prefix}}-rotate-180 {
  transform: rotate(180deg);
}

.{{prefix}}.{{prefix}}-rotate-270 {
  transform: rotate(270deg);
}

.{{prefix}}.{{prefix}}-flip-y {
  transform: scale(-1, 1);
}

.{{prefix}}.{{prefix}}-flip-x {
  transform: scale(1, -1);
}

{{# each codepoints }}
{{# if ../selector }}
{{ ../selector }}.{{ ../prefix }}-{{ @key }}:before {
{{ else }}
{{ tag }}.{{ ../prefix }}-{{ @key }}:before {
{{/ if }}
  content: "\\{{ codepoint this }}";
}
{{/ each }}
