{
  "private": true,
  "name": "parent",
  "version": "0.1.0",
  "engines": {
    "yarn": ">=1.7.0 <2.x.x",
    "node": ">=14.18.0"
  },
  "scripts": {
    "prepare": "yarn icons && $PWD/schemaCodegen.sh",
    "ci": "yarn install && yarn icons && $PWD/schemaCodegen.sh && yarn type && yarn lint:ci && yarn test:ci && yarn standalone build:production",
    "clean": "lerna run clean && $PWD/schemaCodegen.sh clean",
    "build": "lerna run --ignore=@axonivy/inscription-standalone build",
    "build:clean": "$PWD/schemaCodegen.sh && lerna run build:clean",
    "type": "lerna run type",
    "lint": "lerna run lint --",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "lint:fix": "lerna run lint:fix --",
    "standalone": "yarn -s --cwd integrations/standalone",
    "icons": "yarn --cwd packages/icons build",
    "dev": "yarn standalone start:mock",
    "test": "yarn --cwd packages/editor test",
    "test:ci": "$PWD/schemaCodegen.sh && lerna run test:ci",
    "generate": "$PWD/schemaCodegen.sh"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "copyfiles": "2.4.1",
    "eslint": "^8.32.0",
    "eslint-config-react-app": "^7.0.1",
    "lerna": "^6.1.0",
    "rimraf": "^4.1.1",
    "typescript": "~4.9.4"
  },
  "workspaces": [
    "packages/*",
    "integrations/*"
  ]
}
