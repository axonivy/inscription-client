{
  "private": true,
  "name": "parent",
  "engines": {
    "yarn": ">=1.7.0 <2.x.x",
    "node": ">=18.16.1"
  },
  "scripts": {
    "ci": "yarn ci:prepare && yarn type && yarn lint:ci && yarn test:ci && yarn standalone build:production",
    "ci:prepare": "yarn install && yarn icons:generate",
    "clean": "lerna run clean",
    "build": "lerna run --ignore=@axonivy/inscription-standalone build",
    "build:clean": "lerna run build:clean",
    "type": "lerna run type",
    "lint": "lerna run lint --",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "lint:fix": "lerna run lint:fix --",
    "standalone": "yarn -s --cwd integrations/standalone",
    "dev": "yarn standalone start:mock",
    "generate": "lerna run generate",
    "icons:generate": "yarn --cwd packages/icons generate",
    "protocol": "yarn --cwd packages/protocol",
    "test": "yarn --cwd packages/editor test",
    "test:ci": "lerna run test:ci",
    "publish:next": "lerna publish --exact --canary --preid next --tag-version-prefix beta --pre-dist-tag next --no-git-tag-version --no-push --ignore-scripts --yes"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "copyfiles": "2.4.1",
    "eslint": "^8.42.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lerna": "^6.6.2",
    "rimraf": "^5.0.1",
    "typescript": "~5.2.2"
  },
  "workspaces": [
    "packages/*",
    "integrations/*"
  ]
}
