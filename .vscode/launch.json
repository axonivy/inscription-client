{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/mock.html",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "Start Dev Server"
    },
    {
      "name": "Run YAML Editor Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/integrations/vscode/yaml-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}/integrations/vscode/yaml-editor-webview-toolkit"
      ],
      "outFiles": ["${workspaceRoot}/integrations/vscode/yaml-editor-webview-toolkit/out/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "yarn: build"
    }
  ]
}
