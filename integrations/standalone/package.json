{
  "name": "@axonivy/inscription-standalone",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@axonivy/inscription-core": "0.1.0",
    "@axonivy/inscription-editor": "0.1.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "vite build --mode development",
    "build:clean": "yarn clean && yarn build",
    "build:production": "vite build",
    "type": "tsc --noEmit",
    "start": "vite",
    "start:mock": "MOCK=true vite",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "webtest": "yarn playwright test",
    "webtest:mock": "yarn webtest -c ./tests/mock",
    "webtest:screenshot": "yarn webtest -c ./tests/screenshots"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
