{
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.json", "*.yml"],
            "options": {
                "printWidth": 100,
                "tabWidth": 2
            }
        }
    ],
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
}
